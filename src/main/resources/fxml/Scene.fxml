<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import java.net.URL?>

<?import javafx.scene.control.Hyperlink?>
<BorderPane id="AnchorPane" prefHeight="600" prefWidth="1030" style="-fx-background-color: #1E1F22; -fx-background-image: url('/images/utx-welcome.png'); -fx-background-repeat: stretch;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.xtx.ut4converter.ui.MainSceneController">

    <stylesheets>
        <URL value="@/styles/Styles.css"/>
    </stylesheets>

    <!-- MENU BAR -->
    <top>
        <MenuBar>
            <Menu text="File" fx:id="menuFile">
                <!-- AUTO FILLED -->
                <SeparatorMenuItem />
                <MenuItem onAction="#handleExit" text="Exit" />
            </Menu>
            <Menu text="Options">
                <MenuItem onAction="#handleSettings" text="Settings" />
            </Menu>
            <Menu text="?">
                <MenuItem onAction="#openGitHubUrl" text="GitHub page" />
                <MenuItem onAction="#openGitHubWiki" text="Help wiki" />
                <MenuItem onAction="#openGitHubUrlReleases" text="Check for updates" />
                <MenuItem onAction="#handleAbout" text="About UT Converter" />
            </Menu>
        </MenuBar>
    </top>

    <center>
        <Pane>
            <Label alignment="CENTER" layoutX="300.0" layoutY="270" textAlignment="CENTER" style="-fx-font-size: 35;" text="Welcome to UT converter !" textFill="WHITE" />
            <Label alignment="CENTER" layoutX="300.0" layoutY="330" textAlignment="CENTER" style="-fx-font-size: 14" text="Program helps converting maps from previous Unreal (Tournament) games" textFill="WHITE" />
            <Label alignment="CENTER" layoutX="300.0" layoutY="360" textAlignment="CENTER" style="-fx-font-size: 14" text="to either UT3(2007) or UT4(2015) game." textFill="WHITE" />
            <Label alignment="CENTER" layoutX="300.0" layoutY="390" textAlignment="CENTER" text="You may ask authorization from original author prior to converting map." textFill="#fcd900"/>
        </Pane>
    </center>

    <bottom>
        <Hyperlink text="Conversion Wiki" onAction="#goToConversionWiki" BorderPane.alignment="CENTER" style="-fx-font-size: 20;" textFill="white"/>
    </bottom>
</BorderPane>
