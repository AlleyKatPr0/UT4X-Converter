<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<BorderPane id="AnchorPane" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.xtx.ut4converter.ui.MainSceneController">
    <!-- MENU BAR -->
    <top>
        <MenuBar>
            <Menu text="File" fx:id="menuFile">
                <!-- AUTO FILLED -->
                <SeparatorMenuItem />
                <MenuItem onAction="#handleExit" text="Exit" />
            </Menu>
            <Menu text="Options">
                <MenuItem onAction="#handleSettings" text="Settings" />
            </Menu>
            <Menu text="?">
                <MenuItem onAction="#openGitHubUrl" text="GitHub page" />
                <MenuItem onAction="#openGitHubWiki" text="Help wiki" />
                <MenuItem onAction="#openGitHubUrlReleases" text="Check for updates" />
                <MenuItem onAction="#handleAbout" text="About UT Converter" />
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
