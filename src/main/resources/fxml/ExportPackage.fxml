<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.xtx.ut4converter.controller.ExportPackageController"
            prefHeight="400.0" prefWidth="750.0">

    <stylesheets>
        <URL value="@/styles/Styles.css"/>
    </stylesheets>

    <top>
        <GridPane hgap="10" vgap="10" BorderPane.alignment="CENTER" alignment="CENTER">

            <Label text="Game" prefWidth="80" GridPane.columnIndex="0"/>
            <ComboBox fx:id="unrealGamesList"  GridPane.columnIndex="1" />

            <Label text="Package file" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="unrealPakPath" disable="true" prefWidth="500" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button text="SELECT"  onAction="#selectPackage"  GridPane.columnIndex="2"  GridPane.rowIndex="1"/>

            <Label text="Export folder" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="exportFolder" disable="true" prefWidth="500" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button text="SELECT"  onAction="#selectFolder"  GridPane.columnIndex="2"  GridPane.rowIndex="2"/>

            <Label text="Exporter" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <ComboBox fx:id="pkgExtractorCbBox"  GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Separator GridPane.columnSpan="3" GridPane.rowIndex="4"/>
            <Button text="Export" disable="true" fx:id="convertBtn" alignment="CENTER" onAction="#exportPackage" GridPane.rowIndex="5"  GridPane.columnSpan="2"/>
            <Button text="STOP" fx:id="stopExportBtn" alignment="CENTER" onAction="#stopExport" GridPane.rowIndex="5" GridPane.columnIndex="1" style="-fx-background-color: red"/>
        </GridPane>
    </top>
    <center>
        <TextArea fx:id="logContentTxtArea" disable="true"/>
    </center>
    <bottom>
        <VBox alignment="CENTER">
            <Label fx:id="progressIndicatorLbl" alignment="CENTER" style="-fx-font-size: 20;" BorderPane.alignment="CENTER"/>
        </VBox>
    </bottom>
</BorderPane>
